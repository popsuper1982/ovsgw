[root@testovs scripts]# modprobe -D openvswitch
insmod /lib/modules/4.19.90-2102.2.0.0068.ctl2.x86_64/kernel/arch/x86/crypto/crc32c-intel.ko
insmod /lib/modules/4.19.90-2102.2.0.0068.ctl2.x86_64/kernel/lib/libcrc32c.ko
insmod /lib/modules/4.19.90-2102.2.0.0068.ctl2.x86_64/kernel/net/ipv4/udp_tunnel.ko
insmod /lib/modules/4.19.90-2102.2.0.0068.ctl2.x86_64/kernel/net/ipv4/netfilter/nf_defrag_ipv4.ko
insmod /lib/modules/4.19.90-2102.2.0.0068.ctl2.x86_64/kernel/net/ipv6/netfilter/nf_defrag_ipv6.ko
install /usr/sbin/modprobe --ignore-install nf_conntrack $CMDLINE_OPTS && /usr/sbin/sysctl --quiet --pattern 'net[.]netfilter[.]nf_conntrack.*' --system
insmod /lib/modules/4.19.90-2102.2.0.0068.ctl2.x86_64/kernel/net/netfilter/nf_nat.ko
insmod /lib/modules/4.19.90-2102.2.0.0068.ctl2.x86_64/kernel/net/ipv4/netfilter/nf_nat_ipv4.ko
insmod /lib/modules/4.19.90-2102.2.0.0068.ctl2.x86_64/kernel/net/ipv6/netfilter/nf_nat_ipv6.ko
insmod /lib/modules/4.19.90-2102.2.0.0068.ctl2.x86_64/extra/openvswitch.ko

[root@testovs ~]# modprobe openvswitch
[root@testovs ~]# lsmod | grep openvswitch
openvswitch           180224  0
